<div="main">
<h3> Welcome <%= @user.firstname%> </h3>

<br>

<% if @user.tasks.empty? %>
    No tasks yet. Create a new task <%= link_to "here", new_task_path %>
<% else %>
    Your tasks: 
    <br>
    <% @user.tasks.each do |task| %>
        <%= link_to "#{task.content}", task_path(task) %>
        <%= link_to "edit", edit_task_path(task) %>
        <%= link_to "delete", task_path(task), method: :delete %>
        <br>
    <% end %>
    <br>
<% end %>
</div>

